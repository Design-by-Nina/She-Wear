{% comment %}
body-classes.liquid

snippet used to render theme features as classes on the body tag, removed liquid from stylesheet.

theme feature classes (in order)

- section titles
- image ratio
- grid text alignment
- product variants (swatches)
- color swatch style
- ajax cart method

{% endcomment %}
{%- liquid

  assign body_classes = ''
  assign base_class = 'theme-features__'

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'section-titles--' | append: settings.section_title_border

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'image-ratio--' | append: settings.image_ratio

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'grid-text-alignment--' | append: settings.grid_text_alignment

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'product-variants--' | append: settings.product_variants

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'color-swatch-style--' | append: settings.color_swatch_style

  assign body_classes = body_classes | append: ' ' | append: base_class | append: 'ajax-cart-method--' | append: settings.cart_type

  echo body_classes

 -%}
