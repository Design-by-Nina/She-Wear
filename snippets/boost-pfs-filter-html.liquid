{%- capture bc_layout -%}
{%- case layout -%}
{%- when 'productGridItemHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-grid [[gridWidthClass]][[soldOutClass]][[saleClass]] [[itemActiveSwapClass]]">
    <div class="boost-pfs-filter-product-item-inner">
        <div class="boost-pfs-filter-product-item-image">
            [[itemImages]]
            <div class="boost-pfs-filter-product-item-label">
              <span class="boost-pfs-filter-label">[[itemLabels]][[itemTagLabels]]</span>
           </div>
        </div>

        <div class="boost-pfs-filter-product-bottom">
          <div class="boost-pfs-filter-product-bottom-inner">
            [[itemVendor]]
            <a href="[[itemUrl]]#" class="boost-pfs-filter-product-item-title"><span>[[itemTitle]]</span></a>
            [[itemReviews]]
            [[itemPrice]]
            [[itemColorSwatches]]
            [[itemSizeSwatches]]
          </div>
        </div>
    </div>
</div>
{%- when 'productListItemHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-list [[soldOutClass]][[saleClass]] [[itemActiveSwapClass]]">
  <div class="boost-pfs-filter-product-item-inner">
    <div class="boost-pfs-filter-product-item-image">
        [[itemImages]]
        <div class="boost-pfs-filter-product-item-label">
          <span class="boost-pfs-filter-label">
            [[itemLabels]][[itemTagLabels]]
          </span>
       </div>
    </div>
    <div class="boost-pfs-filter-product-bottom">
      <div class="boost-pfs-filter-product-bottom-inner">
        [[itemVendor]]
        <a href="[[itemUrl]]" class="boost-pfs-filter-product-item-title"><span>[[itemTitle]]</span></a>
        [[itemReviews]]
        [[itemPrice]]
        <p class="boost-pfs-filter-des">[[itemDescription]]</p>
        [[itemColorSwatches]]
        [[itemSizeSwatches]]
      </div>
    </div>
  </div>
</div>
{%- when 'productListPlaceholderHtml' -%}
<div class="boost-pfs-filter-product-item boost-pfs-filter-product-item-list [[class.filterProductSkeleton]]">
  <div class="boost-pfs-filter-product-item-image">
    <div class="[[class.filterProductSkeleton]]-image" style="padding-top: [[paddingTop]]%"></div>
  </div>
  <div class="boost-pfs-filter-product-bottom">
    <div class="boost-pfs-filter-product-bottom-inner">
    <p class="boost-pfs-filter-product-item-vendor"><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width1"></span></p>
    <a href="#" class="boost-pfs-filter-product-item-title"><span><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width4"></span></span></a>
    <p class="boost-pfs-filter-product-item-price"><span class="boost-pfs-filter-skeleton-text boost-pfs-filter-skeleton-width2"></span></p>
    <p class="boost-pfs-filter-des">
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 100%"></span><br />
      <span class="boost-pfs-filter-skeleton-text" style="width: 30%"></span>
    </p>
    </div>
  </div>
</div>

{%- when 'soldOutLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
{% assign product_label_image_sold_out = section.settings.product_label_image_sold_out %}

<span class="soldout">
  {% if show_product_label_image %}<img src="{{ product_label_image_sold_out | img_url: 'small' }}" alt="{{ product_label_image_sold_out.alt }}" />
  {% else %}
  {{ label_soldout | default: 'Sold Out' }}
  {% endif %}
</span>

{%- comment -%} #719766932 adding in additional labels{%- endcomment -%}
{%- when 'preorderLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="preorder">Pre Order</span>

{%- when 'limitedEditionLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="limited-edition">Limited Edition</span>

{%- when 'comingSoonHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="coming-soon">Coming Soon</span>


{%- when 'newLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="new-label">New</span>

{%- when 'secondsLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="seconds">Seconds</span>

{%- when 'saleLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
{% assign product_label_image_sale = section.settings.product_label_image_sale %}
{% assign show_sale_percent = section.settings.show_sale_percent %}
<span class="sale">{% if show_product_label_image %}<img src="{{ product_label_image_sale | img_url: 'small' }}" alt="{{ product_label_image_sale.alt }}" />{% else %}{% if show_sale_percent %} [[salePercent]] {% else %} {{ label_sale | default: 'Sale' }}{% endif %}{% endif %}</span>

{%- when 'restockedLabelHtml' -%}
{% assign show_product_label_image = section.settings.show_product_label_image %}
<span class="restocked">Restocked</span>

{%- when 'tagLabelHtml' -%}
<span class="tag [[labelTag]]" >[[labelTag]]</span>

{%- when 'vendorHtml' -%}
<p class="boost-pfs-filter-product-item-vendor">[[itemVendorLabel]]</p>

{%- when 'previousActiveHtml' -%}
<li><a href="[[itemUrl]]">&larr;</a></li>

{%- when 'previousDisabledHtml' -%}
<li class="boost-pfs-filter-pagination-disabled"><span>&larr;</span></li>

{%- when 'nextActiveHtml' -%}
<li><a href="[[itemUrl]]">&rarr;</a></li>

{%- when 'nextDisabledHtml' -%}
<li class="boost-pfs-filter-pagination-disabled"><span>&rarr;</span></li>

{%- when 'pageItemHtml' -%}
<li><a href="[[itemUrl]]">[[itemTitle]]</a></li>

{%- when 'pageItemSelectedHtml' -%}
<li><span class="boost-pfs-filter-pagination-active">[[itemTitle]]</span></li>

{% when 'pageItemRemainHtml' %}
<li><span>[[itemTitle]]</span></li>

{%- when 'paginateHtml' -%}
<ul>[[previous]][[pageItems]][[next]]</ul>

{%- when 'sortingHtml' -%}
<button class="boost-pfs-filter-top-sorting-wrapper"><span><span> {% assign temp = 'collections.sorting.title' | t  %} {% unless temp contains 'translation missing'  %} {{ temp }} {% else %} Sorting {% endunless %}, </span></span></button><ul class="boost-pfs-filter-filter-dropdown">[[sortingItems]]</ul>

{%- when 'showLimitHtml' -%}
<label> Show </label><select class="boost-pfs-filter-filter-dropdown">[[showLimitItems]]</select>

{%- when 'breadcrumbHtml' -%}
<a href="/"> Home </a> [[breadcrumbDivider]] [[breadcrumbItems]]

{%- when 'breadcrumbDivider' -%}
<span class="divider">/</span>

{%- when 'breadcrumbItemLink' -%}
<a href="[[itemLink]]">[[itemTitle]]</a>

{%- when 'breadcrumbItemSelected' -%}
<span>[[itemTitle]]</span>

{%- endcase -%}
{%- endcapture -%}

{%- assign str = '}}' -%}
{{- bc_layout | json | replace: '[[', '{{' | replace: ']]', str -}}

