<section class="homepage-section-{{ section.id }} featured-content{% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="featured-content">

  <article class="row" style="margin-top:-100px; margin-bottom:-150px;">
    <a href="/collections/new-restocked/shoes"> <h2 class="section-title desktop-12">{{ section.settings.heading }}</h2></a>

    <div class="clear"></div>
    <div class="pages-content desktop-12 tablet-6 mobile-3">
      {% if section.settings.page != blank %}
        {%- assign feat_page = pages[section.settings.page] -%}
        {{ feat_page.content }}
      {% else %}
        <div class="rte">
          {{ section.settings.rich_text }}
        </div>
      {% endif %}

      
    </div>


  </article>

</section>
<div class="clear"></div>


{% schema %}
{
  "name": "Rich text 2",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome"
    },
    {
      "type": "richtext",
      "id": "rich_text",
      "label": "Text",
      "info": "Use basic HTML to format text"
    },
    {
      "type": "page",
      "id": "page",
	  "label": "Or Show content from a page"
    }
   ],
   "presets":[
      {
       "name":"Rich text 2",
       "category":"Text"

	  }
   ]
}
{% endschema %}
